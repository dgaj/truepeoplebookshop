<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    <nav class="tab-bar">

      <section class="middle tab-bar-section">
        <h1 class="title"><%= user.name %></h1>
      </section>

    	<% if current_user?(user) %>  
	      <section class="left-small">
	        <a class="left-off-canvas-toggle fi-widget text-center" href="#">
	        	
	        </a>        
	      </section>
      <% end %>

    </nav>

		<% if current_user?(user) %> 
	    <aside class="left-off-canvas-menu">
	      <ul class="off-canvas-list">
	        <li><label>Settings</label></li>
	        <li><%= link_to "Home", root_path %></li>
	      </ul>
	    </aside>
	  <% end %>  

    <section class="main-section panel">
      
    	<div class="row">
    		<div class="small-12 columns">
						<%= image_tag user.picture.url  %>
    		</div>	
    	</div>	

    	<div class="row" style="margin-top:1em;">
    		<div class="small-12 columns">
					<ul class="button-group even-2">
						<li><%= link_to "<< users", users_path, class: "primary button" %></li>
						<li><%= mail_to user.email, "email", class: "warning button" %></li>
					</h3>
    		</div>	
    	</div>	

    </section>

  <a class="exit-off-canvas"></a>

  </div>
</div>

