<% provide(:title, "Log In") %>

<div class="row">
  <div class="small-12 large-6 large-centered columns user panel clearfix"> 	
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="row">
        <div class="small-12 columns">
          <h1 class="panel-title text-center">Log In</h1>
        </div>
      </div>  

		  <div class="row full-width">
        <div class="small-4 columns">
        	<%= f.label :email, "Email", class: "right inline" %>
        </div>
        <div class="small-8 columns">
          <%= f.email_field :email, placeholder: "your email" %>
        </div>
		  </div>

		  <div class="row full-width">
        <div class="small-4 columns">
        	<%= f.label :password, "Password",
        	 		class: "right inline" %>
        </div>
        <div class="small-8 columns">
          <%= f.password_field :password, placeholder: "your secret password" %>
        </div>
		  </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
      	<div class="row">
      		<div class="small-4 columns">	
        		<%= f.check_box :remember_me, class: "right" %>
        	</div>	
        	<div class="small-8 columns">
        		<span>Remember me on this computer</span>
        	</div>	
      	</div>
      <% end %>

      <div class="row panel-links">
        <div class="small-12 large-12 large-centered columns mg-top">
  				<ul class="button-group even-2">
  					<li>
  						<%= link_to "Sign Up", signup_path, 
  																class: "primary button" %>	
  					</li>      	
          	<li>
          		<%= f.submit "Log In", class: "success button" %>
          	</li>
          </ul>	
        </div>
      </div>  

    <% end %>
  </div>
</div>  